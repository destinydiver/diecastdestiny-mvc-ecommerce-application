@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="m-1 p-3">
        <a asp-controller="Products" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New Product</a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-md-6 col-sm-12 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <div class="btn-group float-end">
                                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="bi-pencil-square"></i> Edit</a>
                                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>                                     
                                        </div>
                                    } 
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <img src="@item.ProductImageURL" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-12">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Brand: </b>@item.Brand.BrandName</p>
                            <p class="card-text"><b>Model Name: </b>@item.Model</p>
                            <p class="card-text"><b>Price: </b>@item.Price.ToString("c")</p>
                            <p class="card-text"><b>Model Year: </b>@item.ModelYear</p>
                            <p class="card-text"><b>Manufacturer: </b>@item.Manufacturer.ManufacturerName</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" 
                                    asp-route-id="@item.Id"><i class="bi bi-cart-plus"></i> Add to Cart (@item.Price.ToString("c"))</a>                                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
