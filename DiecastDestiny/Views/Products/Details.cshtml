@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 border-primary mt-5">
            <div class="card mb-3" style="max-width: 900px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.ProductName
                                    
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-danger float-end" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i> Delete</a>
                                        <a class="btn btn-secondary float-end" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi-pencil-square"></i> Edit</a>
                                    }
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <img src="/images/@Model.ProductImageURL" width="100%" alt="@Model.ProductName">
                    </div>
                    <div class="col-12">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text"><b>Brand: </b>
                                <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.BrandId">
                                    @Model.Brand.BrandName
                                </a>
                            </p>
                            <p class="card-text"><b>Model Name: </b>@Model.Model</p>
                            <p class="card-text"><b>Price: </b>@Model.Price.ToString("c")</p>
                            <p class="card-text"><b>Model Year: </b>@Model.ModelYear</p>
                            <p class="card-text"><b>Manufacturer: </b>
                                <a asp-controller="Manufacturers" asp-action="Details" asp-route-id="@Model.ManufacturerId">
                                    @Model.Manufacturer.ManufacturerName
                                </a>
                            </p>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <p class="card-text">
                                    <b>Suppliers: </b>
                                
                                    @foreach (var supplier in Model.ProductsSuppliers)
                                    {
                                        <a asp-controller="Suppliers" asp-action="Details" asp-route-id="@supplier.SupplierId">
                                            @supplier.Supplier.Name
                                            <span>|</span>
                                        </a>
                                    }
                                </p>
                            }
                            
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end" asp-action="Index">
                                    <i class="bi bi-arrow-left"></i> Back to all Products</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" 
                                    asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (@Model.Price.ToString("c"))</a>                                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

