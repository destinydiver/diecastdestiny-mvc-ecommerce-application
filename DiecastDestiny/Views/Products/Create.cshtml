@using DiecastDestiny.Data.Enums
@model NewProductVM

@{
    ViewData["Title"] = "New Product";
}

<div class="container py-3">
    <div class="mb-3 py-5 border-bottom border-dark">
        <h1 class="text-center text-dark fw-bold">Add Product</h1>
    </div>
    <div class="col-md-8 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @************************************************* LEFT COLUMN **********************************@
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ProductName" class="control-label text-dark fw-bold py-2"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Model" class="control-label text-dark fw-bold py-2"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ModelYear" class="control-label text-dark fw-bold py-2"></label>
                        <input asp-for="ModelYear" class="form-control" />
                        <span asp-validation-for="ModelYear" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label text-dark fw-bold py-2"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProductImageURL" class="control-label text-dark fw-bold py-2"></label>
                        <input asp-for="ProductImageURL" class="form-control"/>
                        <span asp-validation-for="ProductImageURL" class="text-danger"></span>
                    </div>
                </div>

                @* ************************************* Right Column *************************************** *@
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ProductLine" class="control-label text-dark fw-bold py-2"></label>
                        <select asp-for="ProductLine" class="form-control" asp-items="Html.GetEnumSelectList<ProductLine>()"></select>
                        <span asp-validation-for="ProductLine" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ManufacturerId" class="control-label text-dark fw-bold py-2"></label>
                        <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.Manufacturers"></select>
                        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="BrandId" class="control-label text-dark fw-bold py-2"></label>
                        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SupplierIds" class="control-label text-dark fw-bold py-2"></label>
                        <select asp-for="SupplierIds" class="form-control" asp-items="ViewBag.Suppliers"  multiple></select>
                        <span asp-validation-for="SupplierIds" class="text-danger"></span>
                    </div>
                </div>

                @*********************************************** BOTTOM ROW TEXT AREA ********************************@
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label text-dark fw-bold py-2"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 offset-4 text-center">
                <img width="100%" id="ProductImageURLPreview" />
            </div>

            <div class="btn-group">
            <input type="submit" value="Create" class="btn btn-success fw-bold" />
            <a class="btn btn-primary fw-bold" asp-action="Index">Show All</a>
        </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $("#ProductImageURL").on("change", function() 
        {
            var output = document.getElementById("ProductImageURLPreview");
            output.src = $(this).val();
        })
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#ProductImageURL").on("change", function() {
        var output = document.getElementById("ProductImageURLPreview");
        output.src = $(this).val();})
    </script>
}
