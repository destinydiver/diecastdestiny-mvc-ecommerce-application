@model Brand;

@{
    ViewData["Title"] = "Brand Details";
}

<div class="container py-3">
    <div class="mb-3 p-3 border-bottom" >
            <h1 class="text-center">Details for Brand: @Model.BrandName</h1>
    </div>
    <img class="border-info rounded-circle mb-4 mx-auto d-block" style="max-width: 250px" src="/BrandLogos/@Model.LogoURL" />
    <div class="card bg-dark col-md-8 mx-auto" style="max-width: 540px; height: 700px">
        <div class="card-header">
                <div class="card-text">
                    <h5 class="card-title text-info">
                        @Model.BrandName
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <div class="btn-group float-end">
                                    <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi-pencil-square"></i> Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i> Delete</a>                                     
                                </div>
                            } 
                    </h5>
                </div>
        </div>

        <div class="card-body">
                <p class="text-warning pb-1">
                @Model.History
                </p>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a class="btn btn-primary" asp-action="Index">All Brands</a>
                <a class="btn btn-success" asp-controller="Products" asp-action="Index">Product List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
