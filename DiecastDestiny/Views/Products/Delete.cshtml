@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-3">
    <div class="my-4 py-5 border-bottom border-dark">
        <h1 class="text-center text-dark fw-bold">Delete Product: <span class="badge bg-secondary text-dark fw-bold" style="font-size: 2.5rem">@Model.ProductName</span></h1>
    </div>
        <div class="col-md-8  mx-auto border-primary mt-5">
            <div class="card mb-3" style="max-width: 900px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.ProductName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-end" asp-action="Edit" asp-route-id="@Model.Id"><i class="bg-info bi-pencil-square"></i> Edit</a>
                                    }
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <img src="/images/@Model.ProductImageURL" width="100%" alt="@Model.ProductName">
                    </div>
                    <div class="col-12">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Brand: </b> @Model.Brand.BrandName</p>
                            <p class="card-text"><b>Model Name: </b>@Model.Model</p>
                            <p class="card-text"><b>Price: </b>@Model.Price</p>
                            <p class="card-text"><b>Model Year: </b>@Model.ModelYear</p>
                            <p class="card-text"><b>Manufacturer: </b> @Model.Manufacturer.ManufacturerName</p>
         
                            <div>
                                <b>Suppliers:  </b>
                                <span>
                                    @foreach (var supplier in Model.ProductsSuppliers)
                                    {
                                    @supplier.Supplier.Name  <span> | </span>
                                    }
                                </span>
                            </div>
                           
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer p-4">
                            
                            <a class="btn btn-secondary fw-bold float-end" asp-action="Index">
                                <i class="bi bi-arrow-left"></i> Back to all Products</a>
                                <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirm Delete" class="btn btn-danger fw-bold" />
                                </form>                                            
                           
                        </div>

                    </div>
                </div>
            </div>
        </div>
   
</div>

