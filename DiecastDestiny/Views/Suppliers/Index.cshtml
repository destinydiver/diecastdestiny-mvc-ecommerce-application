@model IEnumerable<Supplier>;

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container py-5 mt-6 mfg-bg rounded-5">
    <div class="mb-3 p-3 border-bottom border-success">
          <h1 class="text-center display-2 fw-bolder displayFont fst-italic text-success">Suppliers</h1>
    </div>
    <div class="col-lg-8 mt-5 mx-auto">
        <div class="card rounded-5 bg-light p-3 text-center">
            <table class="table table-light text-center rounded-5 p-3">
            <thead>
                <tr>
                    <th class="text-center text-secondary">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center text-secondary">@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-center text-secondary">@Html.DisplayNameFor(model => model.Phone)</th>
                    <th class="text-center text-secondary">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-dark">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-dark">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-dark">
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="text-center btn-group border-0">
                            <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        
        <div class="text-center mt-4"
            <div class="text-center mt-4">
                <div class="btn-group">
                    <a class="btn btn-secondary fw-bold" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn btn-primary fw-bold" asp-controller="Products" asp-action="Index">Products</a>
                    <a class="btn btn-warning fw-bold" asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
                    <a class="btn btn-light fw-bold" asp-controller="Brands" asp-action="Index">Brands</a>
                    <a class="btn btn-success fw-bold" asp-action="Create">Add Supplier</a>
                </div>
            </div>
        </div>
    </div>
</div>