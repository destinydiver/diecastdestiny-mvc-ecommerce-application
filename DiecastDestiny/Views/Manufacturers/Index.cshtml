@model IEnumerable<Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container py-5 mt-6 mfg-bg rounded-5">
    <div class="mb-3 p-3 border-bottom border-success">
            <h1 class="text-center display-2 fw-bolder displayFont fst-italic text-success">Manufacturers</h1>
        </div>
    <div class="col-lg-8 mt-5 mx-auto">
        <div class="card rounded-5 bg-light p-3">
            <table class="table table-light">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-5" src="@item.LogoURL" alt="@item.ManufacturerName" style="max-width: 100px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ManufacturerName)
                        </td>
                        <td class="mt-3 btn-group border-0">
                                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                                    }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        
        <div class="text-center mt-4">
            <div class="btn-group">
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Home</a>
                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Products</a>
                <a class="btn btn-warning" asp-controller="Brands" asp-action="Index">Brands</a>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="btn btn-success" asp-action="Create">Add a Manufacturer</a>
            }
            </div>
        </div>
    </div>
</div>

