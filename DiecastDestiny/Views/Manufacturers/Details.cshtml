@model Manufacturer;

@{
    ViewData["Title"] = "Manufacturer Details";
}

<div class="container">
    <div class="row text-center">
        <p>
            <h1>Details for Manufacturer: @Model.ManufacturerName</h1>
        </p>
    </div>
        
    <div class="row">
        <div class="col-md-8 mx-auto">
            <img class="border-info rounded-circle mb-4 mx-auto d-block" style="max-width: 250px" src="/BrandLogos/@Model.LogoURL" />
                    
            
            <div class="form-control mb-4 border-0">
                <label asp-for="ManufacturerName" class="control-label"></label>
                <input asp-for="ManufacturerName" class="form-control" readonly/>
                <span asp-validation-for="ManufacturerName" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <div class="form-control mb-4 border-0">
                <label asp-for="LogoURL" class="control-label"></label>
                <input asp-for="LogoURL" class="form-control" readonly/>
                <span asp-validation-for="LogoURL" class="text-danger"></span>
            </div>
            }
            <div class="form-control mb-4 border-0">
                <label asp-for="History" class="control-label"></label>
                <input asp-for="History" class="form-control" readonly/>
                <span asp-validation-for="History" class="text-danger"></span>
            </div>
            <div class="input-group float-end">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                }
                
                <a class="btn btn-primary" asp-action="Index">Show All</a>
            </div>
        </div>
    </div>
    
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
}
