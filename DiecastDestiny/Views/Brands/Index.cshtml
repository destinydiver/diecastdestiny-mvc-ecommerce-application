@model IEnumerable<Brand>

@{
    ViewData["Title"] = "List of Brands";
}

<div class="row">
    <div class=" col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LogoURL)</th>
                    @*<th>@Html.DisplayNameFor(model => model.BrandName)</th>*@
                    <th>@Html.DisplayNameFor(model => model.History)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-5" src="@item.LogoURL" alt="@item.BrandName" style="max-width: 200px"/>
                        </td>
                        @*<td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BrandName)
                        </td>*@
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.History)
                        </td>
                        <td >
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; left: 50px; top: 150px;">
    <a class="btn btn-success" asp-controller="Brands" asp-action="Create"> <i class="bi bi-plus-circle"> Add New</i></a>
</div>
